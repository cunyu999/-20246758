#include <iostream>
#include <cmath>

class Vector2D {
private:
    double x;
    double y;

public:
    // 构造函数，初始化向量的两个分量
    Vector2D(double x = 0, double y = 0) : x(x), y(y) {}

    // 向量相加方法，接受另一个 Vector2D 参数并返回新向量
    Vector2D addVector(const Vector2D& other) const {
        return Vector2D(x + other.x, y + other.y);
    }

    // 打印向量分量的方法
    void print() const {
        std::cout << "Vector (x, y): (" << x << ", " << y << ")" << std::endl;
    }

    // 求模长并打印的方法
    void printMagnitude() const {
        double magnitude = std::sqrt(x * x + y * y);
        std::cout << "Magnitude: " << magnitude << std::endl;
    }
};

int main() {
    // 输入向量坐标
    double v1_x, v1_y, v2_x, v2_y;
    std::cin >> v1_x >> v1_y >> v2_x >> v2_y;

    // 创建向量对象
    Vector2D vector1(v1_x, v1_y);
    Vector2D vector2(v2_x, v2_y);

    // 相加操作
    Vector2D sum = vector1.addVector(vector2);

    // 输出结果
    std::cout << "Sum of vectors (x, y): (" << sum.x << ", " << sum.y << ")" << std::endl;
    sum.printMagnitude(); // 输出两向量和的模长

    return 0;
}
